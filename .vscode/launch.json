    "version": "0.2.0",
    "configurations": [
        {
            "name": "CartAPI (Docker)",
            "type": "coreclr",
            "request": "launch",
            "cwd": "/app",
            "program": "/app/CartApi.dll",
            "sourceFileMap": {
                "/app": "${workspaceroot}/obj/Docker/publish/"
            },
            "pipeTransport": {
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeProgram": "bash",
                "pipeCwd": "${workspaceRoot}",
                "pipeArgs": [
                    "-c",
                    "docker exec -i cartapi_dll"
                ],
            }
        }
    ]
}